<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <%= render "members/shared/error_messages", resource: @destination %>
      <p class="page-title">address for delivery</p>
      <%= form_with model: @destination,local: true do |f| %>
        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, :placeholder => "0000000" ,required: true, maxlength: 7, minlength: 7,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0"  ,required: true,class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name, :placeholder => "令和道子" ,required: true ,class:"form-control" %>
        </div>
        <%= f.submit "新規登録", class:"btn btn-success m-2" %>
      <% end %>
      <table border="1" class="table table-sm" id= "table-borders">
        <thead>
          <tr class="table-skyblue">
            <th width="100px">郵便番号</th>
            <th>住所</th>
            <th width="120px">宛名</th>
            <th width="165px" colspan="1" ></th>
          </tr>
        </thead>
        <tbody>
          <% @member.destinations.each do |destination| %>
            <tr>
              <td>〒<%= add_ress(destination.postal_code) %></td>
              <td><%= destination.address %></td>
              <td><%= destination.name %></td>
              <td class="align-middle">
                <%= link_to "編集する" , edit_destination_path(destination.id), class:"btn btn-success btn-sm my-0 mx-0" %>
                <%= link_to "削除する" ,destination_path(destination.id) ,method: :delete, class:"btn btn-danger btn-sm my-0 mx-0" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




