<div class="container">
  <div class="offset-2 col-10">
    <h3 class="mt-4 pb-3">新規登録画面</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :名前, class:"col-4" %>
        <%= f.text_field :last_name, autofocus: true, placeholder:"令和",required: true, class:"col-3" %>
        <%= f.text_field :first_name, autofocus: true, placeholder:"道子",required: true, class:"col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :フリガナ（全角カタカナ）,class:"col-4" %>
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", autocomplete: "last_name", required: true, pattern: "[ァ-ヶー－]*", class:"col-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", autocomplete: "first_name", required: true, pattern: "[ァ-ヶー－]*", class:"col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :email,class:"col-4" %>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", required: true, class:"col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし）,class:"col-4" %>
        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", maxlength: 7,minlength: 7 ,autocomplete: "postal_code",required: true, class:"col-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :住所,class:"col-4" %>
        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園0-0", autocomplete: "address",required: true, class:"col-6" %>
      </div>
      <div class="form-group row">
        <%= f.label :電話番号（ハイフンなし）,class:"col-4" %>
        <%= f.number_field :telephone_number, autofocus: true, placeholder: "00000000000", autocomplete: "telephone_number" ,required: true, class: "no-spin col-6" %>
      </div>
      <div class="form-group row">
        <div class="col-4">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class:"col-6" %>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード（確認用）, class:"col-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-6" %>
      </div>
      <div class="actions offset-1 col-8">
        <%= f.submit "新規登録", class:"btn btn-info btn-block login"   %>
      </div>
    <% end %>
    <h3>既に登録済みの方</h3>
    <%= render "members/shared/links" %>
    <div id="remember" class="checkbox"></div>
  </div>
</div>

