<!--<div class="login-body">-->
  <div class="container">
    <!--<div class="card card-container">-->
    <div class="row">
      <div class="col-4 offset-4">
        <h3 class="mt-4 pb-3">会員ログイン</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email",required: true, class:"form-controls" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %>
            <%= f.password_field :password, autocomplete: "current-password",required: true, class:"form-controls" %>
          </div>
          <div class="form-group">
            <%= f.submit "ログイン", class:"btn btn-info btn-block login col-4" %>
          </div>
        <% end %>
        <p> </p>
        <p>会員登録がお済みでない方</p>
        <%= link_to "新規登録", new_member_registration_path, class:"btn btn-info btn-block login col-4" %>
        <div id="remember" class="checkbox">
        </div>
      </div>
    </div>
  </div>

