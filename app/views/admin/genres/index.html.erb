<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="mt-3">ジャンル一覧</h2>
      <div class="mt-4">
        <%= render "members/shared/error_messages", resource: @genre %>
        <div class="flex">
          <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
          <div><%= f.label :ジャンル名 %></div>
          <div class="mx-1"><%= f.text_field :name, required: true %></div>
          <div><%= f.submit "新規登録" %></div>
          <% end %>
        </div>
        <table class='table table-inverse mt-2'>
          <thead class="table-skyblue">
            <tr>
              <th colspan="2">ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td class="table-mini">
                  <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>





