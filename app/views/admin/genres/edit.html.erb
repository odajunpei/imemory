<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="mt-3">ジャンル名変更</h2>
      <div class="mt-4">
        <%= render "admin/shared/error_messages", resource: @genre %>
        <div class="flex">
          <%= form_with model: @genre,url:admin_genre_path,method: :patch, local:true  do |f| %>
            <div><%= f.label :ジャンル名 %></div>
            <div class="mx-1"><%= f.text_field :name, required: true %></div>
            <div><%= f.submit "変更" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
