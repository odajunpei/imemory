<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="mt-3 pb-4">会員一覧</h2>
      <table class="table">
        <thead class="table-skyblue">
          <tr>
            <th class="table-mini"><%= sort_orderm "created_at", "会員ID" %></th>
            <th width="35%"><%= sort_orderm "last_name", "氏名" %></th>
            <th>メールアドレス</th>
            <th class="table-mini"><%= sort_orderm "is_deleted", "ステータス" %></th>
          </tr>
        </thead>
        
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td>
                <%= link_to admin_member_path(member.id) do %>
                  <%= member.last_name %>
                  <%= member.first_name %>
                <% end %>
              </td>
              <td><%= member.email %></td>
              <td align="center">
                <% if member.is_deleted %>
                  <span class="status-false">退会</span>
                <% else %>
                  <span class="status-true">有効</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>

