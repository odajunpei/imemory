<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="mt-3 pb-4"><%= @member.last_name_kana %> <%= @member.first_name_kana %>さんの会員詳細</h2>
        <table class="table">
          <tr>
            <th id="table-skyblue" colspan="2">
              会員ID : <%=@member.id %>
            </th>
          </tr>          <tr>
            <th width="30%">氏名</th>
            <td><%= @member.last_name %> <%= @member.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td>〒<%= add_ress(@member.postal_code) %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @member.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @member.is_deleted %>
                  <span class="status-false">退会</span>
                <% else %>
                  <span class="status-true">有効</span>
                <% end %>
            </td>
          </tr>
        </table>
        <%= link_to "編集する",edit_admin_member_path, class: "btn btn-success" %>
        <%= link_to  "注文履歴一覧を見る", admin_orders_path(name: @member.id) , class: "btn btn-primary ml-4" %>
    </div>
  </div>
</div>
