  <div class="container">
    <!--<div class="card card-container">-->
    <div class="row">
      <div class="col-4 offset-4">
        <h3 class="mt-4 pb-3">管理者ログイン</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , required: true ,class:"form-controls"%>
          </div>
          <div class="form-group">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" , required: true,class:"form-controls"%>
          </div>
          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.submit "ログイン", class:"btn btn-info btn-block login col-4" %>
          </div>
        <% end %>
        パスワードを忘れた場合<%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
